<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:autoLink="all"
        android:background="@drawable/rounded_text_message_text_to"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="This is a very long text message to test the length parameter test test test test test"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageMessageTo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageMessageTo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/timestampMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Timestamp"
        android:textColor="#8C8C8C"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textMessageTo"
        app:layout_constraintTop_toTopOf="@+id/textMessageTo" />

</androidx.constraintlayout.widget.ConstraintLayout>